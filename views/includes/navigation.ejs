<div class="backdrop"></div>
<header class="main-header">
    <button id="side-menu-toggle">Menu</button>
    <ul class="mobile-search--div main-header__item-list">
        <li class="">
            <form action="/query-searched-items" method="GET">
                <div class="search-bar--wrapper">
                    <i style="font-size: 20px;" class="fas fa-search search-icon"></i>
                    <input class="search-bar" type="search" placeholder="Search For Items..." name="search" />
                </div>
                <!-- <button class="btn" type="submit">Search</button> -->
            </form>
        </li>
    </ul>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a href="/" class="<%= path === '/' ? 'active' : ''%>">Shop</a>
            </li>
            <li class="main-header__item">
                <a href="/products" class="<%= path === '/products' ? 'active' : ''%>">Products</a>
            </li>
            <% if (isAuthenticated) { %>
            <li class="main-header__item">
                <a href="/orders" class="<%= path === '/orders' ? 'active' : ''%>">Orders</a>
            </li>
            <li class="main-header__item">
                <a href="/admin/add-product" class="<%= path === '/admin/add-product' ? 'active' : ''%>">Add Product</a>
            </li>
            <li class="main-header__item">
                <a href="/admin/products" class="<%= path === '/admin/products' ? 'active' : ''%>">Admin Products</a>
            </li>
            <% } %>
        </ul>

        <ul class="main-header__item-list">
            <li class="">
                <form action="/query-searched-items" method="GET">
                    <div class="search-bar--wrapper">
                        <i style="font-size: 20px;" class="fas fa-search search-icon"></i>
                        <input class="search-bar" type="search" placeholder="Search For Items..." name="search" />
                    </div>
                    <!-- <button class="btn" type="submit">Search</button> -->
                </form>
            </li>
        </ul>

        <ul class="main-header__item-list">
            <% if (!isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/login' ? 'active' : ''%>" href="/login">Login</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Signup</a>
            </li>
            <li class="main-header__item">
                <a href="/cart" class="<%= path === '/cart' ? 'active' : ''%>"><i style="font-size: 20px;"
                        class="fas fa-shopping-bag"></i></a>
            </li>
            <% } else { %>
            <li class="main-header__item">
                <form action="/logout" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
                    <button type="submit">Logout</button>
                </form>
            </li>
            <li class="main-header__item">
                <a href="/cart" class="<%= path === '/cart' ? 'active' : ''%>"><i style="font-size: 20px;"
                        class="fas fa-shopping-bag"></i></a>
            </li>
            <% } %>
        </ul>
    </nav>
</header>
<nav class="mobile-nav">
    <ul class="mobile-nav__item-list">
        <li class="mobile-nav__item">
            <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
