<%- include('../includes/head.ejs') %>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="heroImage">
        <div class="heroContents">
            <h1>View Our Latest & Greatest!</h1>
            <p>The best music equipment you can find for the best price!</p>
        </div>
    </div>
    <main>
        <div class="custom-section">
            <h2 class="section--heading">Shop By Category</h2>
            <div class="flex-row justify-content-between">
                <!-- GUITARS -->
                <form class="card category-card text-decoration--none" action="/getProductCategory" method="GET"
                    style="background-image: url('https://static.guitarcenter.com/static/gc/2021/tent-pole/president-day/gc-md-dp-pres-day-031-02-04-21.jpg');">
                    <input type="hidden" name="category" value="guitars" />
                    <button type="submit" class="fake-btn">View More</button>
                </form>
                <!-- KEYBOARDS -->
                <form class="card category-card text-decoration--none" action="/getProductCategory" method="GET"
                    style="background-image:
                    url('https://static.guitarcenter.com/static/gc/2021/tent-pole/president-day/gc-md-dp-pres-day-034-02-04-21.jpg');">
                    <input type="hidden" name="category" value="keyboards" />
                    <button type="submit" class="fake-btn">View More</button>
                </form>
                <!-- BASS GUITARS -->
                <form class="card category-card text-decoration--none" action="/getProductCategory" method="GET"
                    style="background-image:
                    url('https://static.guitarcenter.com/static/gc/2021/tent-pole/president-day/gc-md-dp-pres-day-032-02-04-21.jpg');">
                    <input type="hidden" name="category" value="bass-guitars" />
                    <button type="submit" class="fake-btn">View More</button>
                </form>
                <!-- STUDIO -->
                <form class="card category-card text-decoration--none" action="/getProductCategory" method="GET"
                    style="background-image:
                    url('https://static.guitarcenter.com/static/gc/2021/tent-pole/president-day/gc-md-dp-pres-day-036-02-04-21.jpg');">
                    <input type="hidden" name="category" value="studio" />
                    <button type="submit" class="fake-btn">View More</button>
                </form>
                <!-- STUDIO -->
                <form class="card category-card text-decoration--none" action="/getProductCategory" method="GET"
                    style="background-image:
                    url('https://static.guitarcenter.com/static/gc/2021/tent-pole/president-day/gc-md-dp-pres-day-038-02-04-21.jpg');">
                    <input type="hidden" name="category" value="microphones" />
                    <button type="submit" class="fake-btn">View More</button>
                </form>
                <!-- DRUMS -->
                <form class="card category-card text-decoration--none" action="/getProductCategory" method="GET"
                    style="background-image:
                    url('https://static.guitarcenter.com/static/gc/2021/tent-pole/president-day/gc-md-dp-pres-day-035-02-04-21.jpg');">
                    <input type="hidden" name="category" value="drums" />
                    <button type="submit" class="fake-btn">View More</button>
                </form>
            </div>
        </div>

        <% if (prods.length > 0) { %>
        <hr />
        <h2 class="section--heading" style="text-align: center;">Shop Our Products</h2>
        <div class="grid">
            <% for (let product of prods) { %>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= product.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
                </div>
                <div class="card__content">
                    <h2 class="product__price">$<%= product.price %></h2>
                    <p class="product__description">
                        <%= product.description.substring(0, 70) + '.....' %>
                    </p>
                </div>
                <div class="card__actions">
                    <a href="/products/<%= product._id %>" class="btn">Shop This Deal</a>
                    <%# include('../includes/add-to-cart.ejs', {
                        product: product
                    }) %>

                </div>
            </article>
            <% } %>
        </div>
        <% } else { %>
        <h1>No Products Found</h1>
        <% } %>

    </main>
    <%- include('../includes/end.ejs') %>